<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    android:id="@+id/main_refresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.MainFragment">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:padding="8dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:id="@+id/status_card"
                app:cardUseCompatPadding="true"
                app:cardElevation="2dp"
                app:cardCornerRadius="@dimen/card_radius"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:id="@+id/status_bg"
                        android:padding="32dp"
                        android:background="@drawable/bg_round_top"
                        android:backgroundTint="@color/green"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/status_icon"
                            android:tint="@color/white"
                            android:src="@drawable/ic_round_check_circle"
                            android:layout_centerInParent="true"
                            android:layout_width="60dp"
                            android:layout_height="60dp" />
                    </RelativeLayout>
                    <TextView
                        android:id="@+id/status"
                        android:padding="4dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/green"
                        android:text="@string/status_description_icebox_mode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                app:cardUseCompatPadding="true"
                android:layout_marginTop="8dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="@dimen/card_radius"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:padding="8dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <FrameLayout
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:id="@+id/config_update_icon_parent"
                            android:layout_width="24dp"
                            android:layout_height="24dp">
                            <ImageView
                                android:id="@+id/config_update_icon"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_round_check_circle"
                                android:tint="@color/green"
                                tools:visibility="visible" />
                            <ProgressBar
                                tools:visibility="gone"
                                android:id="@+id/config_update_progress"
                                style="@style/Widget.AppCompat.ProgressBar"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                        </FrameLayout>
                        <RelativeLayout
                            android:layout_marginStart="16dp"
                            android:layout_centerVertical="true"
                            android:layout_toStartOf="@id/config_update_button"
                            android:layout_toEndOf="@id/config_update_icon_parent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textColor="@color/text_color_primary"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:text="@string/title_no_update"
                                android:id="@+id/config_update_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:layout_marginTop="2dp"
                                android:textColor="@color/text_color_secondary"
                                android:text="@string/tip_update"
                                android:layout_below="@id/config_update_title"
                                android:id="@+id/config_update_subtitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </RelativeLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/config_update_button"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:minWidth="32dp"
                            android:minHeight="18dp"
                            android:text="@string/button_update"
                            android:textColor="@color/colorAccent"
                            app:rippleColor="@color/colorAccentTrans"
                            tools:visibility="visible" />
                    </RelativeLayout>
                    <View
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:background="@color/color_divider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp" />
                    <RelativeLayout
                        android:padding="8dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <FrameLayout
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:id="@+id/app_update_icon_parent"
                            android:layout_width="24dp"
                            android:layout_height="24dp">
                            <ImageView
                                android:id="@+id/app_update_icon"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_round_check_circle"
                                android:tint="@color/green"
                                tools:visibility="visible" />
                            <ProgressBar
                                tools:visibility="gone"
                                android:id="@+id/app_update_progress"
                                style="@style/Widget.AppCompat.ProgressBar"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                        </FrameLayout>
                        <RelativeLayout
                            android:layout_marginStart="16dp"
                            android:layout_centerVertical="true"
                            android:layout_toStartOf="@id/app_update_button"
                            android:layout_toEndOf="@id/app_update_icon_parent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textColor="@color/text_color_primary"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:text="@string/title_no_update"
                                android:id="@+id/app_update_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:layout_marginTop="2dp"
                                android:textColor="@color/text_color_secondary"
                                android:text="@string/tip_update"
                                android:layout_below="@id/app_update_title"
                                android:id="@+id/app_update_subtitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </RelativeLayout>
                        <com.google.android.material.button.MaterialButton
                            android:text="@string/button_update"
                            android:layout_centerVertical="true"
                            android:id="@+id/app_update_button"
                            android:layout_alignParentEnd="true"
                            android:textColor="@color/colorAccent"
                            app:rippleColor="@color/colorAccentTrans"
                            android:minWidth="32dp"
                            android:minHeight="18dp"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <com.google.android.material.navigation.NavigationView
                app:itemTextAppearance="@style/TextAppearance.Bold"
                app:itemIconTint="@color/colorAccent"
                app:itemTextColor="@color/text_color_primary"
                app:elevation="@dimen/no_elevation"
                android:id="@+id/nav"
                app:menu="@menu/menu_main_nav"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>